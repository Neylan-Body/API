<!DOCTYPE html>
<html>
    <body>
        <p id="demo">Clique no botão para receber sua localização em Latitude e Longitude:</p>
        <button onclick="getLocationHour()">Clique Aqui</button>
        <script>
        var x=document.getElementById("demo");
        function getLocationHour(){
            if (navigator.geolocation){
                navigator.geolocation.getCurrentPosition(showPositionHour);
            }
            else{
                x.innerHTML="O seu navegador não suporta Geolocalização.";
            }
        }
        function showPositionHour(position){
            var data = new Date();
            var hora = data.getHours()+":"+ data.getMinutes()+":"+ data.getSeconds();
            x.innerHTML = JSON.stringify({"Latitude":position.coords.latitude, "Longitude":position.coords.longitude, "Hora":hora}); 
        }
        </script>
    </body>
</html>